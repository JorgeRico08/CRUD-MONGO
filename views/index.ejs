<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">
    <style>
        .container{
            max-width: 960px;
        }
    </style>
    <title>Registro de datos</title>
  </head>
  <body>
    <h1 style="text-align: center;">Security Alert</h1>
    <div class="container">
        <div class="shadow-lg p-3 mb-5 bg-body rounded">
            <h4>Datos del Alumno</h4>
            <form action="/crear" method="POST">
                <div class="col-md-6">
                    <label for="usuario" class="form-label">Usuario</label>
                    <input id="usuario" name="usuario" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="contraceña" class="form-label">Contraceña</label>
                    <input id="contraceña" name="contraceña" type="password" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="gmail" class="form-label">Email</label>
                    <input id="gmail" name="gmail" type="email" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="Nombre" class="form-label">Nombre</label>
                    <input id="Nombre" name="Nombre" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="ApellidoP" class="form-label">Apellido Paterno</label>
                    <input id="ApellidoP" name="ApellidoP" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="ApellidoM" class="form-label">Apellido Materno</label>
                    <input id="ApellidoM" name="ApellidoM" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="curp" class="form-label">curp</label>
                    <input id="curp" name="curp" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="ApellidoM" class="form-label">Domicilio (Calle, numero)</label>
                    <input id="ApellidoM" name="ApellidoM" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="Colonia" class="form-label">Colonia</label>
                    <input id="Colonia" name="Colonia" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="Ciudad" class="form-label">Ciudad</label>
                    <input id="Ciudad" name="Ciudad" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="telefono" class="form-label">Telefono</label>
                    <input id="telefono" name="telefono" type="tel" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="fecha" class="form-label">Fecha de registro</label>
                    <input id="fecha" name="fecha" type="text" class="form-control" required>
                </div>
                <button type="submit" style="margin-top: 2rem;" class="w-100 btn btn-guardar btn-lg"> <i class="bi bi-save"></i>Registrar Carga</button>
         </div> 

             <!-- Tabla Alumnos  -->
    <table id="tablaDatos" class="table mt-4">
        <thead>
            <tr>
                <!-- <th style="display: none;">ID</th> -->
                <th>Usuario</th>
                <!-- <th style="display: none;">Contraceña</th> -->
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <!-- <th style="display: none;">Apellido Materno</th> -->
                <!-- <th>Domicilio (Calle, numero)</th>
                <th>Ciudad</th>
                <th>Colonia</th>
                <th>Telefono</th> -->
                <!-- <th style="display: none;">Fecha de registro</th> -->
            </tr>
        </thead>
        <tbody>
            <% datos.forEach( (datos) => { %>
                <tr>
                    <!-- <td style="display: none;"><%= datos._id %></td> -->
                    <td><%= datos.usuario %></td>
                    <!-- <td style="display: none;"><%= datos.contraceña %></td> -->
                    <td><%= datos.gmail %></td>
                    <td><%= datos.edad %></td>
                    <td><%= datos.nombre %></td>
                    <td><%= datos.apePaterno %></td>
                    <!-- <td style="display: none;"><%= datos.apeMaterno %></td> -->
                    <!-- <td><%= datos.curp %></td>
                    <td><%= datos.domicilio %></td>
                    <td><%= datos.colonia %></td>
                    <td><%= datos.ciudad %></td>
                    <td><%= datos.telefono %></td> -->
                    <!-- <td style="display: none;"><%= datos.fechaRegistro %></td> -->
                    <td>
                        <a type="button" class="btn_editar btn btn-outline-primary bi bi-pencil"></a>
                        <a href="/borrar/<%= datos._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>

    <!-- Modal para Editar   -->
    <div id="MDatos" class="modal fade" tabindex="-1" aria-labelledby="modalDatos" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h5 class="modal-title" id="exampleModalLabel">Editar Info</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/editar" method="POST">
                  <input name="id_editar" id="id_editar" type="text" hidden>
                <div class="mb-3">
                    <label for="usuario_editar" class="col-form-label">Usuario</label>
                    <input id="usuario_editar" name="usuario_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="gmail_editar" class="col-form-label">Email</label>
                    <input id="gmail_editar" name="gmail_editar" type="email" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="nombre_editar" class="col-form-label">Nombre</label>
                    <input id="nombre_editar" name="nombre_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="apellidoP_editar" class="col-form-label">Apellido Paterno</label>
                    <input id="apellidoP_editar" name="apellidoP_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="apellidoM_editar" class="col-form-label">Apellido Materno</label>
                    <input id="apellidoM_editar" name="apellidoM_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="curp_editar" class="col-form-label">curp</label>
                    <input id="curp_editar" name="curp_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="domicilio_editar" class="col-form-label">Domicilio (Calle, numero)</label>
                    <input id="domicilio_editar" name="domicilio_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="colonia_editar" class="col-form-label">Colonia</label>
                    <input id="colonia_editar" name="colonia_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="ciudad_editar" class="col-form-label">Ciudad</label>
                    <input id="ciudad_editar" name="ciudad_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="telefono_editar" class="col-form-label">Telefono</label>
                    <input id="telefono_editar" name="telefono_editar" type="tel" class="form-control" value="">
                </div>
            </div>
            <div class="modal-footer">              
              <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
          </form>
          </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>   
    <script src="js/code.js"></script>
</body>
</html>